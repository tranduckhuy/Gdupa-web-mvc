@{
    ViewData["Title"] = "Products";
}

@{
    var message = TempData["Message"] as string;
}
@if (!string.IsNullOrEmpty(message))
{
    <div class="alert alert-success">
        @ViewBag.Message
    </div>
}

@model WarehouseWebMVC.ViewModels.ProductViewModel;
<!-- sherah Dashboard -->
<section class="sherah-adashboard sherah-show">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="sherah-body">
                    <!-- Dashboard Inner -->
                    <div class="sherah-dsinner">
                        <div class="row mg-top-20">
                            <div class="col-12 sherah-flex-between">
                                <!-- Sherah Breadcrumb -->
                                <div class="sherah-breadcrumb">
                                    <h2 class="sherah-breadcrumb__title">Product list</h2>
                                    <ul class="sherah-breadcrumb__list">
                                        <li><a href="#">Home</a></li>
                                        <li class="active"><a href="order-list.html">Product List</a></li>
                                    </ul>
                                </div>
                                <!-- End Sherah Breadcrumb -->
                                <a asp-area="" asp-controller="Product" asp-action="AddProduct" class="sherah-btn sherah-gbcolor">Add Product</a>
                            </div>
                        </div>
                        <div class="sherah-table sherah-page-inner sherah-border sherah-default-bg mg-top-10" style="padding-top: 0;">
                            <div class="row">
                                <div class="col-sm-12 col-md-8"></div>
                                <div class="col-sm-12 col-md-4">
                                    <form>
                                        <div id="sherah-table__vendor_filter" class="dataTables_filter">
                                            <label for="search-input" style="position: relative;">
                                                <span class="sherah-data-table-label" style="font-size:1rem;position: relative; top:2.6rem; left:18.5rem; z-index: 4;">Search</span>
                                            </label>
                                            <div class="input-group display-flex" style="position: relative;">
                                                <select id="searchType" class="col-2" name="searchType" style="height:40px; font-size:0.75rem;color:#666;">
                                                    <option value="0">Type</option>
                                                    <option value="name">Name</option>
                                                    <option value="supplier">Supplier</option>
                                                </select>
                                                &nbsp;
                                                <input style="flex-shrink:0;width:auto;z-index:2;" type="search" id="search-input" class="col-2 form-control form-control-sm" placeholder="Search" aria-controls="sherah-table__vendor">
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <!--style="max-height:350px;overflow-y:auto;overflow-x:hidden;margin-top:10px;position:relative;"-->
                            <table id="sherah-table__main-product" class="sherah-table__vendor sherah-table__main-v3">
                                <!-- sherah Table Head -->
                                <!--style="position:sticky;top:0;z-index:1;"-->
                                <thead class="sherah-table__head" style="display:block;">
                                    <tr>
                                        <th class="sherah-table__column-1 sherah-table__h1" style="width: 30%;">Product Name</th>
                                        <th class="sherah-table__column-2 sherah-table__h2" style="width: 15%;padding-left:10px;">Supplier Name</th>
                                        <th class="sherah-table__column-3 sherah-table__h3" style="width: 10%;padding-left:10px;">Price</th>
                                        <th class="sherah-table__column-4 sherah-table__h4" style="width: 10%;padding-left:0;">Category</th>
                                        <th class="sherah-table__column-5 sherah-table__h5" style="width: 10%;padding-left:5px;">Brand</th>
                                        <th class="sherah-table__column-6 sherah-table__h6" style="width: 10%;padding-left:5px;">Unit</th>
                                        <th class="sherah-table__column-7 sherah-table__h7" style="width: 15%;padding-left:5px;">Action</th>
                                    </tr>
                                </thead>
                                <!--style="height: 100%;"-->
                                <tbody class="sherah-table__body" style="display:block;overflow-y:scroll;max-height:250px;">
                                    @foreach (var product in Model.Products)
                                    {
                                        <tr style="height: 20px;">
                                            <td class="sherah-table__column-1 sherah-table__data-1" style="width:30%;min-width:300px;padding:12px;text-align:left;">
                                                <div class="sherah-language-form__input">
                                                    <input class="sherah-language-form__check" id="checkbox" name="checkbox" type="checkbox">
                                                    <p class="crany-table__product--number"><a asp-area="" asp-controller="Product" asp-action="ProductDetail" class="sherah-color1" style="font-size: 1rem;">@product.Name</a></p>
                                                </div>
                                            </td>
                                            <td class="sherah-table__column-2 sherah-table__data-2" style="width:15%;min-width:150px;padding:12px;text-align:left;">
                                                <div class="sherah-table__product-content">
                                                    <p class="sherah-table__product-desc"><a asp-area="" asp-controller="Supplier" asp-action="SupplierList" class="sherah-color1" style="font-size: 1rem; font-weight: 400">@product.Supplier.Name</a></p>
                                                </div>
                                            </td>
                                            <td class="sherah-table__column-3 sherah-table__data-3" style="width: 10%;min-width:80px;padding:12px 12px 12px 0;text-align:left;">
                                                <p class="sherah-table__product-desc">$@product.Price</p>
                                            </td>
                                            <td class="sherah-table__column-4 sherah-table__data-4" style="width: 10%;min-width:80px;padding:12px 12px 12px 0;text-align:left;">
                                                <div class="sherah-table__product-content">
                                                    <p class="sherah-table__product-desc">@product.Category.Name</p>
                                                </div>
                                            </td>
                                            <td class="sherah-table__column-5 sherah-table__data-5" style="width: 10%;min-width:80px;padding:12px 12px 12px 0;text-align:left;">
                                                <div class="sherah-table__product-content">
                                                    <p class="sherah-table__product-desc">@product.Brand.Name</p>
                                                </div>
                                            </td>
                                            <td class="sherah-table__column-6 sherah-table__data-6" style="width: 10%;min-width:80px;padding:12px 12px 12px 0;text-align:left;">
                                                <div class="sherah-table__product-content">
                                                    <p class="sherah-table__product-desc">@product.Unit</p>
                                                </div>
                                            </td>
                                            <td class="sherah-table__column-7 sherah-table__data-7" style="width: 15%;min-width:120px;padding:12px 12px 12px 0;margin-left:10px;">
                                                <div class="sherah-table__status__group" style="justify-content:unset">
                                                    <a asp-area="" asp-controller="Product" asp-action="ProductDetail" class="sherah-table__action sherah-color1 sherah-color1__bg--opactity">
                                                        <i class="fa-regular fa-eye"></i>
                                                    </a>
                                                    <a asp-area="" asp-controller="Product" asp-action="UpdateProduct" class="sherah-table__action sherah-color4 sherah-color4__bg--opactity">
                                                        <i class="fa-regular fa-pen-to-square"></i>
                                                    </a>
                                                    <a href="#" onclick="handleDelete(@product.ProductId)" data-delete-url="@Url.Action("DeleteProduct", "Product")" 
                                                        id="deleteButton" class="sherah-table__action sherah-color2 sherah-color2__bg--offset">
                                                        <svg class="sherah-color2__fill" xmlns="http://www.w3.org/2000/svg" width="16.247" height="18.252" viewBox="0 0 16.247 18.252">
                                                            <g id="Icon" transform="translate(-160.007 -18.718)">
                                                                <path id="Path_484" data-name="Path 484" d="M185.344,88.136c0,1.393,0,2.786,0,4.179-.006,1.909-1.523,3.244-3.694,3.248q-3.623.007-7.246,0c-2.15,0-3.682-1.338-3.687-3.216q-.01-4.349,0-8.7a.828.828,0,0,1,.822-.926.871.871,0,0,1,1,.737c.016.162.006.326.006.489q0,4.161,0,8.321c0,1.061.711,1.689,1.912,1.69q3.58,0,7.161,0c1.2,0,1.906-.631,1.906-1.695q0-4.311,0-8.622a.841.841,0,0,1,.708-.907.871.871,0,0,1,1.113.844C185.349,85.1,185.343,86.618,185.344,88.136Z" transform="translate(-9.898 -58.597)" />
                                                                <path id="Path_485" data-name="Path 485" d="M164.512,21.131c0-.517,0-.98,0-1.443.006-.675.327-.966,1.08-.967q2.537,0,5.074,0c.755,0,1.074.291,1.082.966.005.439.005.878.009,1.317a.615.615,0,0,0,.047.126h.428c1,0,2,0,3,0,.621,0,1.013.313,1.019.788s-.4.812-1.04.813q-7.083,0-14.165,0c-.635,0-1.046-.327-1.041-.811s.4-.786,1.018-.789C162.165,21.127,163.3,21.131,164.512,21.131Zm1.839-.021H169.9v-.764h-3.551Z" transform="translate(0 0)" />
                                                                <path id="Path_486" data-name="Path 486" d="M225.582,107.622c0,.9,0,1.806,0,2.709a.806.806,0,0,1-.787.908.818.818,0,0,1-.814-.924q0-2.69,0-5.38a.82.82,0,0,1,.81-.927.805.805,0,0,1,.79.9C225.585,105.816,225.582,106.719,225.582,107.622Z" transform="translate(-58.483 -78.508)" />
                                                                <path id="Path_487" data-name="Path 487" d="M266.724,107.63c0-.9,0-1.806,0-2.709a.806.806,0,0,1,.782-.912.818.818,0,0,1,.818.919q0,2.69,0,5.38a.822.822,0,0,1-.806.931c-.488,0-.792-.356-.794-.938C266.721,109.411,266.724,108.521,266.724,107.63Z" transform="translate(-97.561 -78.509)" />
                                                            </g>
                                                        </svg>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <div class="row" style="margin-top:16px;">
                                <div class="col-sm-12 col-md-5">
                                    <div class="dataTables_info" id="sherah-table__vendor_info" role="status" aria-live="polite">Showing 2 of @Model.Pageable.TotalItems entries</div>
                                </div>
                                <div class="col-sm-12 col-md-7"></div>
                            </div>
                        </div>
                        <div class="row mg-top-40" style="position: relative; bottom: 26px; right: 37px;">
                            <div class="sherah-pagination">
                                <ul class="sherah-pagination__list">
                                    @if (Model.Pageable.CurrentPage > 1)
                                    {
                                        <li class="sherah-pagination__button"><a href="/Product/Product?page=@(Model.Pageable.CurrentPage > 1 ? Model.Pageable.CurrentPage - 1 : 1)"><i class="fas fa-angle-left"></i></a></li>
                                    }
                                    @for (var i = Model.Pageable.StartPage; i <= Model.Pageable.EndPage; i++)
                                    {
                                        <li class="@(Model.Pageable.CurrentPage == i ? "active" : "")"><a href="/Product/Product?page=@i">@i</a></li>
                                    }
                                    @if (Model.Pageable.CurrentPage < Model.Pageable.TotalPages)
                                    {
                                        <li class="sherah-pagination__button"><a href="/Product/Product?page=@(Model.Pageable.CurrentPage < Model.Pageable.TotalPages ? Model.Pageable.CurrentPage + 1 : Model.Pageable.TotalPages)"><i class="fas fa-angle-right"></i></a></li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                    <!-- End Dashboard Inner -->
                </div>
            </div>


        </div>
    </div>
</section>
<!-- End sherah Dashboard -->
