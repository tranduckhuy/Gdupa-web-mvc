    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>

<body id="sherah-dark-light" class="sherah-print-template">
    <div class="sherah-body-area" id="print-area">
        <!-- sherah Dashboard -->
        <section>
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="sherah-body">
                            <!-- Dashboard Inner -->
                            <div class="sherah-dsinner">
                                <div class="sherah-page-inner sherah-default-bg mg-top-25">
                                    <div class="sherah-invoice-header">
                                        <a href="#!">
                                            <img class="sherah-logo__main"
                                                src="/assets/images/gdupa-high-resolution-logo-transparent.png"
                                                alt="Avatar" style="width: 200px; margin-top: 15px;"></a>
                                        <p>
                                            Import Note | <a href="#!">Gdupa</a> - Warehouse Management
                                        </p>
                                        <p class="sherah-invoice-header__id sherah-color1" style="font-size:20px">Import
                                            Note #@Model.ImportNote.ImportNoteId</p>
                                    </div>

                                    <!-- Sherah Invoice -->
                                    <div class="sherah-invoice-form mg-btm-70">
                                        <div class="sherah-invoice-form__first">
                                            <div class="sherah-invoice-form__single">
                                                <h4 class="sherah-invoice-form__title">Billed To: </h4>
                                                <p class="sherah-invoice-form__text">@Model.ImportNote.User.Name</p>
                                                <p class="sherah-invoice-form__text"
                                                    style="min-width:450px;max-width:450px;">
                                                    @Model.ImportNote.User.Address</p>
                                            </div>
                                            <div class="sherah-invoice-form__single sherah-invoice-form__single--right">
                                                <h4 class="sherah-invoice-form__title">Shipped From:</h4>
                                                <p class="sherah-invoice-form__text">@Model.ImportNote.Supplier.Name</p>
                                                <p class="sherah-invoice-form__text"
                                                    style="min-width:450px;max-width:450px;">
                                                    @Model.ImportNote.Supplier.Address
                                                </p>
                                            </div>
                                        </div>
                                        <div class="sherah-invoice-form__first">
                                            <div class="sherah-invoice-form__single">
                                                <h4 class="sherah-invoice-form__title">ImportNote Creator Information:
                                                </h4>
                                                <p class="sherah-invoice-form__text">@Model.ImportNote.User.Phone</p>
                                                <p class="sherah-invoice-form__text">@Model.ImportNote.User.Email</p>
                                            </div>
                                            <div class="sherah-invoice-form__single sherah-invoice-form__single--right">
                                                <div>
                                                    <h4 class="sherah-invoice-form__title">Shipped By:</h4>
                                                    <p class="sherah-invoice-form__text">@Model.ImportNote.Deliverer</p>
                                                </div>
                                                <br />
                                                <div>
                                                    <h4 class="sherah-invoice-form__title">Order Date:</h4>
                                                    <p class="sherah-invoice-form__text">@Model.ImportNote.CreatedAt</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- End Sherah Invoice -->

                                    <div class="row">
                                        <div class="col-12">
                                            <div class="sherah-table-order">
                                                <table class="sherah-table__main sherah-table__main--orderv1">
                                                    <thead class="sherah-table__head">
                                                        <tr>
                                                            <th class="sherah-table__column-1 sherah-table__h1"
                                                                style="font-size:20px;padding:12px 10px;">Product ID
                                                            </th>
                                                            <th class="sherah-table__column-2 sherah-table__h2"
                                                                style="width:35%;font-size:20px;padding:12px 10px;">
                                                                Products name</th>
                                                            <th class="sherah-table__column-3 sherah-table__h3"
                                                                style="font-size:20px;padding:12px 10px;">Price</th>
                                                            <th class="sherah-table__column-4 sherah-table__h4"
                                                                style="font-size:20px;padding:12px 10px;">Quantity</th>
                                                            <th class="sherah-table__column-4 sherah-table__h4"
                                                                style="font-size:20px;padding:12px 10px;">Total</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody class="sherah-table__body">
                                                        @foreach (var ImportNoteDetail in Model.ImportNoteDetails)
                                                        {
                                                            <tr>
                                                                <td class="sherah-table__column-4 sherah-table__data-1">
                                                                    <div class="sherah-table__product-content">
                                                                        <p class="sherah-table__product-desc">
                                                                            @ImportNoteDetail.Product.ProductId</p>
                                                                    </div>
                                                                </td>
                                                                <td class="sherah-table__column-2 sherah-table__data-2">
                                                                    <div class="sherah-table__product-name">
                                                                        <h4 class="sherah-table__product-name--title"
                                                                            style="font-size:16px">
                                                                            @ImportNoteDetail.Product.Name</h4>
                                                                    </div>
                                                                </td>
                                                                <td class="sherah-table__column-3 sherah-table__data-3">
                                                                    <div class="sherah-table__product-content">
                                                                        <p class="sherah-table__product-desc">
                                                                            $@ImportNoteDetail.Product.Price</p>
                                                                    </div>
                                                                </td>
                                                                <td class="sherah-table__column-4 sherah-table__data-4">
                                                                    <div class="sherah-table__product-content">
                                                                        <p class="sherah-table__product-desc">
                                                                            @ImportNoteDetail.Quantity</p>
                                                                    </div>
                                                                </td>
                                                                <td class="sherah-table__column-4 sherah-table__data-4">
                                                                    <div class="sherah-table__product-content">
                                                                        <p class="sherah-table__product-desc">
                                                                            $@ImportNoteDetail.ImportPrice</p>
                                                                    </div>
                                                                </td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                                <div class="order-totals" style="margin-right:0;">
                                                    <ul class="order-totals__list" style="min-width:50%">
                                                        <li class="order-totals__list--sub"><span>Subtotal</span> <span
                                                                class="order-totals__amount"
                                                                style="font-size:16px">$@Model.ImportNote.Total</span>
                                                        </li>
                                                        <li><span>VAT Tax</span> <span class="order-totals__amount"
                                                                style="font-size:16px">$35</span></li>
                                                        <li class="order-totals__bottom"><span>Total</span> <span
                                                                class="order-totals__amount"
                                                                style="font-size:16px">$@((Model.ImportNote.Total) +
                                                                35)</span></li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-12 mg-top-30">
                                            <h4 class="mg-btm-10">Notes: </h4>
                                            <p>All accounts are to be paid within 7 days from ImportNote of invoice. To
                                                be paid by cheque or credit card or direct payment online. If account is
                                                not paid within 7 days</p>
                                            <p>the credits details supplied as confirmation of work undertaken will be
                                                charged the agreed quoted fee noted above.</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- End Dashboard Inner -->
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- End sherah Dashboard -->
    </div>
