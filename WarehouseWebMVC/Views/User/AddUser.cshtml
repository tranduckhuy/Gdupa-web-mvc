@model WarehouseWebMVC.Models.DTOs.UserDTO.AddUserDTO
@{
    ViewData["Title"] = "Register";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>@ViewData["Title"] - Warehouse Management</title>

    <!-- Font Icon -->
    <link rel="stylesheet" href="/assets/fonts/material-icon/css/material-design-iconic-font.min.css">

    <!-- Main css -->
    <link rel="stylesheet" href="/assets/css/main-login.css">
</head>
<body style="overflow: hidden;">
    <div class="main" style="padding: 20px 0 0 0;">

        <!-- Sign up form -->
        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    <div class="signup-form">
                        <a asp-area="" asp-controller="User" asp-action="Users" style="text-decoration: none; color: #000; font-size: 20px;">
                            <i class="zmdi zmdi-arrow-left"></i>
                        </a>
                        <h2 class="form-title">Sign Up</h2>
                        <form method="POST" asp-action="AddUser" asp-controller="User" class="register-form" id="register-form">
                            <div class="form-group">
                                <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <input asp-for="Name" type="text" id="name" placeholder="Your Name" rules="required" />
                                <span class="form-message"></span>
                            </div>
                            <div class="form-group">
                                <label for="email"><i class="zmdi zmdi-email"></i></label>
                                <input asp-for="Email" type="email" id="email" placeholder="Your Email" rules="required|email" />
                                <span class="form-message"></span>
                            </div>
                            <div class="form-group">
                                <label for="phone"><i class="zmdi zmdi-phone"></i></label>
                                <input asp-for="Phone" type="text" id="phone" placeholder="Your Phone" rules="required" />
                                <span class="form-message"></span>
                            </div>
                            <div class="form-group">
                                <label for="address"><i class="zmdi zmdi-pin"></i></label>
                                <input asp-for="Address" type="text" id="address" placeholder="Your Address" rules="required" />
                                <span class="form-message"></span>
                            </div>
                            <div class="form-group">
                                <label for="pass"><i class="zmdi zmdi-lock"></i></label>
                                <input asp-for="Password" type="password" id="pass" placeholder="Password" rules="required"  />
                                <span class="form-message"></span>
                            </div>
                            <div class="form-group">
                                <label for="re-pass"><i class="zmdi zmdi-lock-outline"></i></label>
                                <input asp-for="RepeatPassword" type="password" id="re_pass" placeholder="Repeat your password" rules="required" />
                                <span class="form-message"></span>
                            </div>
                            <div class="form-group">
                                <input type="checkbox" name="agree-term" id="agree-term" class="agree-term" />
                                <label for="agree-term" class="label-agree-term"><span><span></span></span>I agree all statements in  <a href="#" class="term-service">Terms of service</a></label>
                            </div>
                            <div class="form-group form-button">
                                <input type="submit" name="signup" id="signup" class="form-submit" value="Register" />
                            </div>
                        </form>
                    </div>
                    <div class="signup-image">
                        <figure><img src="/assets/images/signup-image.jpg" alt="sing up image"></figure>
                    </div>
                </div>
            </div>
        </section>

    </div>
    <div id="preloader"></div>
    <script src="/js/lib/jquery.min.js"></script>
    <script src="/js/lib/jquery-ui.min.js"></script>
    <script>
        let preloader = document.getElementById('preloader');
        if (preloader) {
            window.addEventListener('load', () => {
                setTimeout(() => {
                    preloader.remove();
                }, 500);
            });
        }
    </script>
    <script src="/js/Validator.js"></script>
    <script>
        Validator('#register-form')
    </script>
</body>
</html>